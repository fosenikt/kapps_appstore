<a href="/apps/app/{{>id}}" class="col-md-3 mb-4" data-type-id="{{>type.id}}" data-type-text="{{>type.title}}" data-company-id="{{>company.public_id}}" data-company-text="{{>company.title}}" data-tags="{{>tags.string}}">
    <div class="card app" style="width:100%;">
        <div class="card-image" style="background: url('{{>primary_image.thumb}}');"></div>
        <div class="card-body">
            <div>
                <h5 class="card-title" style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                    {{>title}}
                </h5>
            </div>
            <p class="card-text">
                <div class="description">
                    {{>short_description}}
                </div>

                <div style="margin-top:10px;">
                    <span class="badge rounded-pill text-bg-primary">
                        {{>company.title}}
                    </span>
                </div>
            </p>
        </div>
    </div>
</a>
